@model IEnumerable<LuckyMe.Models.Game>

@{
    ViewBag.Title = "Novo";
}

<div class="box">
    <div class="box-header">
        <h3 class="box-title">Escolhe o jogo</h3>
    </div>
    <div class="box-body">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-2 col-xs-6">
                    <a href="@Url.Action("Draw", new { id=item.Id })">
                        <div class="small-box bg-gray">
                            <div class="inner text-center">
                                @Html.DisplayFor(modelItem => item.Name)
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>

