@model LuckyMe.Models.Draw

@{
    ViewBag.Title = "Apagar - " + @Model.Game.Name;
}


<div class="row">
    <div class="col-md-6">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title"><i class="fa fa-exclamation-triangle"></i>Tem a certeza que quer apagar este registo?</h3>
            </div>
            <div class="box-body">
                <h4>@Model.Game.Name</h4>
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Date)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Date)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Cost)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Cost)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Award)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Award)
                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Apagar" class="btn btn-danger" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

                
<div>
    <a href="@Url.Action("Index")"><i class="fa fa-arrow-left"></i> Voltar &#224; listagem</a>
</div>